<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CadastroActivity">

        <TextView
            android:id="@+id/dadosBasicosTitle"
            android:text="Dados Básicos"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"/>

        <EditText
            android:id="@+id/cadastroNome"
            android:hint="Nome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"/>

        <EditText
            android:id="@+id/cadastroSobrenome"
            android:hint="Sobrenome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"/>

        <EditText
            android:id="@+id/cadastroUsuario"
            android:hint="Nome de usuário"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"/>

        <EditText
            android:id="@+id/cadastroEmail"
            android:hint="E-mail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"/>

        <EditText
            android:id="@+id/cadastroEndereco"
            android:hint="Endereço"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"/>

        <TextView
            android:id="@+id/fotoTitle"
            android:text="Foto de Perfil"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"/>

        <Button
            android:id="@+id/buttonTirarFoto"
            android:text="Tirar Foto"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="tirarFoto"/>

        <ImageView
            android:id="@+id/profilePhoto"
            android:layout_width="match_parent"
            android:layout_height="359dp"/>

        <TextView
            android:id="@+id/senhaTitle"
            android:text="Senha"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"/>

        <EditText
            android:id="@+id/cadastroSenha"
            android:hint="Crie uma senha"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"/>

        <EditText
            android:id="@+id/confirmaSenha"
            android:hint="Confirme sua senha"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight"/>

        <Button
            android:id="@+id/buttonCadastroFinal"
            android:text="Cadastrar Usuário"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cadastrarUsuario"/>

    </LinearLayout>

</ScrollView>