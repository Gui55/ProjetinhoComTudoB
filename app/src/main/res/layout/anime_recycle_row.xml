<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_start_color"
        app:cardBackgroundColor="#f2e5f2"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recycleName"
                android:layout_width="307dp"
                android:layout_height="30dp"
                android:layout_marginLeft="13dp"
                android:text="Nome" />

            <TextView
                android:id="@+id/recycleAno"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginLeft="13dp"
                android:layout_below="@id/recycleName"
                android:text="Ano" />

            <TextView
                android:id="@+id/recycleGenero"
                android:layout_width="262dp"
                android:layout_height="30dp"
                android:layout_marginLeft="13dp"
                android:layout_below="@id/recycleName"
                android:layout_toRightOf="@id/recycleAno"
                android:text="Genero" />

            <TextView
                android:id="@+id/recycleEstudio"
                android:layout_width="307dp"
                android:layout_height="30dp"
                android:layout_marginLeft="13dp"
                android:layout_below="@id/recycleAno"
                android:text="EstÃºdio" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>